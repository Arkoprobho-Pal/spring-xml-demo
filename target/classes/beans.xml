<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="actor" class="com.stackroute.domain.Actor">
    <constructor-arg name="name" value="Allu Argun"/>
    <constructor-arg name="gender" value="Male"/>
    <constructor-arg name="age" value="34"/>
</bean>
    <bean id="movie" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor"/>
    </bean>
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Rajnikanth"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="65"/>
    </bean>
    <bean id="movie1" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor1"/>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Ravi Teja"/>
        <constructor-arg name="gender" value="Male"/>
        <constructor-arg name="age" value="44"/>
    </bean>

    <bean id="movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2"/>
    </bean>

</beans>